<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Institute Of Commerce Studies &mdash; Forgot Password</title>

    <!-- Bootstrap CSS Link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />

    <!-- CUSTOM CSS LINK -->
    <link rel="stylesheet" href="./css/style.css" />
  </head>
  <body>

    <section class="forgotPassword__section">
      <div class="container">
        <div class="row">
          <div
            class="col-10 col-sm-10 col-md-11 col-lg-8 col-xl-6 mx-auto forgotPassword__section__col__1"
          >

            <h1>Reset Password</h1>
            <form action="/forgotpassword" method="POST">
              <div class="resetform__items">
                <label for="email">Email</label>
                <input type="text" name="email" id="email" required />
              </div>
              <div class="resetform__items">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" required />
              </div>
              <div class="resetform__items">
                <label for="cpassword">Confirm Password</label>
                <input
                  type="password"
                  name="cpassword"
                  id="cpassword"
                  required
                />
              </div>
              <div class="resetform__items">
                <button type="submit">Reset</button>
              </div>
            </form>

          </div>
        </div>
      </div>
    </section>

    <!-- Bootstrap JS Link -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
      crossorigin="anonymous"
    ></script>

    <!-- Custom JS -->
  </body>

</html>